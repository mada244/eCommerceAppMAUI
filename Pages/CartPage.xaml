<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.CartPage"
             BackgroundColor="#fdf7ee">

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Titlu -->
        <Label Text="Cart"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <!-- Conținut principal scrollabil -->
        <Grid Grid.Row="1">
            <CollectionView x:Name="CartListView" IsVisible="False" Margin="0,10,0,0" ItemsSource="{Binding CartProducts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" 
                               Padding="15" 
                               BorderColor="#E0E0E0" 
                               CornerRadius="10" 
                               HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                <Image Grid.Row="0" Grid.Column="0" 
                                       Source="{Binding ImageUrl}" 
                                       WidthRequest="80" 
                                       HeightRequest="80" 
                                       Aspect="AspectFill"
                                       Margin="0,0,15,0"/>
                                
                                <StackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                                    <Label Text="{Binding ProductName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Price, StringFormat='${0:F2}'}" 
                                           FontSize="14" 
                                           TextColor="#2196F3"
                                           FontAttributes="Bold"/>
                                </StackLayout>
                                
                                <StackLayout Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" 
                                           Orientation="Horizontal" 
                                           HorizontalOptions="End">
                                    <Button Text="-" 
                                            FontSize="18" 
                                            WidthRequest="40" 
                                            HeightRequest="40"
                                            BackgroundColor="#F44336"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Clicked="OnDecreaseQuantityClicked"
                                            CommandParameter="{Binding .}"/>
                                    
                                    <Label Text="{Binding Quantity}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           Margin="10,0"/>
                                    
                                    <Button Text="+" 
                                            FontSize="18" 
                                            WidthRequest="40" 
                                            HeightRequest="40"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Clicked="OnIncreaseQuantityClicked"
                                            CommandParameter="{Binding .}"/>
                                </StackLayout>
                                
                                <Button Grid.Row="2" Grid.Column="2" 
                                        Text="🗑️" 
                                        FontSize="16" 
                                        BackgroundColor="Transparent"
                                        TextColor="#F44336"
                                        Clicked="OnRemoveItemClicked"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Empty state -->
            <VerticalStackLayout x:Name="EmptyCartLayout" VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
                <Image Source="cart_empty.png" HeightRequest="180" WidthRequest="180"/>
                <Label Text="Your cart is empty"
                       FontSize="26"
                       TextColor="#7a0026"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Secțiune totalizare și checkout -->
        <StackLayout Grid.Row="2" Padding="24,0,24,16" Spacing="10">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                <Label Text="Sub Total" Grid.Row="0" Grid.Column="0" FontSize="18" TextColor="#6c6172"/>
                <Label x:Name="SubTotalLabel" Grid.Row="0" Grid.Column="1" FontSize="18" TextColor="#2d2233" FontAttributes="Bold"/>
                <Label Text="Freight costs" Grid.Row="1" Grid.Column="0" FontSize="18" TextColor="#6c6172"/>
                <Label Text="$0,00" Grid.Row="1" Grid.Column="1" FontSize="18" TextColor="#2d2233" FontAttributes="Bold"/>
                <Label Text="Discount" Grid.Row="2" Grid.Column="0" FontSize="18" TextColor="#6c6172"/>
                <Label x:Name="DiscountLabel" Grid.Row="2" Grid.Column="1" FontSize="18" TextColor="#f44336" FontAttributes="Bold"/>
                <Label Text="Net Amount" Grid.Row="3" Grid.Column="0" FontSize="20" TextColor="#2d2233" FontAttributes="Bold"/>
                <Label x:Name="NetAmountLabel" Grid.Row="3" Grid.Column="1" FontSize="20" TextColor="#2d2233" FontAttributes="Bold"/>
            </Grid>
            <Button Text="Checkout" BackgroundColor="Black" TextColor="White" FontSize="22" CornerRadius="18" HeightRequest="60" Margin="0,16,0,0" Clicked="OnCheckoutClicked"/>
        </StackLayout>

        <!-- Bara de navigare jos -->
        <Grid Grid.Row="3" Padding="0" HeightRequest="70" BackgroundColor="#f6eddb">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="🏠" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnHomeClicked"/>
            <Button Grid.Column="1" Text="🛍️" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnStoreClicked"/>
            <Button Grid.Column="2" Text="❤️" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnFavoriteClicked"/>
            <Button Grid.Column="3" Text="🛒" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnCartClicked"/>
            <Button Grid.Column="4" Text="👤" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>

</ContentPage> 