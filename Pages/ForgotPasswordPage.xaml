<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EcommerceApp.ForgotPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Forgot Password"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Header -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label 
                    Text="Forgot Password?"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center"
                    TextColor="#1F2937" />

                <Label 
                    Text="Enter your email address and we'll send you a link to reset your password."
                    SemanticProperties.Description="Instructions for password reset"
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="#6B7280"
                    HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Email Entry -->
            <VerticalStackLayout Spacing="5">
                <Label 
                    Text="Email"
                    FontSize="16"
                    TextColor="#374151" />
                
                <Frame 
                    Padding="15,0"
                    BorderColor="#D1D5DB"
                    CornerRadius="8"
                    HasShadow="False">
                    <Entry 
                        x:Name="EmailEntry"
                        Placeholder="Enter your email"
                        FontSize="16"
                        Keyboard="Email"
                        ReturnType="Done"
                        ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=ResetPasswordCommand}" />
                </Frame>
            </VerticalStackLayout>

            <!-- Reset Password Button -->
            <Button 
                x:Name="ResetPasswordButton"
                Text="Send Reset Link"
                SemanticProperties.Hint="Sends password reset email"
                Clicked="OnResetPasswordClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#3B82F6"
                TextColor="White"
                FontSize="16"
                CornerRadius="8"
                HeightRequest="50" />

            <!-- Back to Sign In -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label 
                    Text="Remember your password?"
                    FontSize="16"
                    TextColor="#6B7280" />
                
                <Label 
                    x:Name="BackToSignInLabel"
                    Text="Sign In"
                    FontSize="16"
                    TextColor="#3B82F6"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackToSignInTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 