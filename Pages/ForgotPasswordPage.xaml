<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EcommerceApp.ForgotPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Forgot Password"
             BackgroundColor="#d2c4ad">

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="30,0" VerticalOptions="CenterAndExpand" HeightRequest="600">
            <Image Source="logo.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label 
                    Text="Forgot Password?"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center"
                    TextColor="#1F2937" />

                <Label 
                    Text="Enter your email address and we'll send you a link to reset your password."
                    SemanticProperties.Description="Instructions for password reset"
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="#6B7280"
                    HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="📧" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="EmailEntry"
                           Placeholder="Enter your email"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="240"
                           Keyboard="Email"
                           ReturnType="Done"/>
                </HorizontalStackLayout>
            </Frame>

            <Button 
                x:Name="ResetPasswordButton"
                Text="Send Reset Link"
                SemanticProperties.Hint="Sends password reset email"
                Clicked="OnResetPasswordClicked"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="22"
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="320"
                HorizontalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,24,0,0">
                <Label 
                    Text="Remember your password?"
                    FontSize="20"
                    TextColor="#2d2233" />
                <Label 
                    x:Name="BackToSignInLabel"
                    Text=" Sign In"
                    FontSize="20"
                    TextColor="#2d2233"
                    FontAttributes="Bold"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackToSignInTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 