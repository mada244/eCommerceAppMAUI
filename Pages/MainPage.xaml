<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.MainPage"
             BackgroundColor="#FDF6ED">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Banner Promo -->
        <Grid Grid.Row="0" HeightRequest="180" BackgroundColor="#FDF6ED">
            <Image Source="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&amp;fit=crop&amp;w=800&amp;q=80" Aspect="AspectFill"/>
            <Frame BackgroundColor="#F9B5C4" Padding="0" CornerRadius="80" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center" VerticalOptions="Center" HasShadow="False" BorderColor="Transparent">
                <Label Text="Sale" FontSize="40" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="0,10,0,0">
            <VerticalStackLayout Spacing="30" Padding="0,0,0,20">
                <!-- Summer Sale Section -->
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="SUMMER SALE" FontSize="18" FontAttributes="Bold" TextColor="#2D1E2F"/>
                        <Button Text="Show All" FontSize="14" TextColor="#E94F37" BackgroundColor="Transparent" Clicked="OnShowAllSummerSale"/>
                    </Grid>
                    <CollectionView x:Name="SummerSaleCollection" ItemsSource="{Binding SummerSaleProducts}" HeightRequest="220" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" CornerRadius="18" Margin="10,10,0,10" Padding="0" WidthRequest="140" HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnProductTapped"/>
                                    </Frame.GestureRecognizers>
                                    <VerticalStackLayout>
                                        <Grid>
                                            <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="110" WidthRequest="140" Margin="0,0,0,10"/>
                                        </Grid>
                                        <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold" LineBreakMode="TailTruncation" Margin="8,2,8,0"/>
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="#7B7B7B" Margin="8,0,8,0" LineBreakMode="TailTruncation"/>
                                        <Grid ColumnDefinitions="Auto,Auto" Margin="8,2,8,8">
                                            <Label Text="{Binding Price, StringFormat='$ {0:F2}'}" FontSize="14" TextColor="#E94F37" FontAttributes="Bold" Margin="10,0,0,0"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- New Arrivals Section -->
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="NEW ARRIVALS" FontSize="18" FontAttributes="Bold" TextColor="#2D1E2F"/>
                        <Button Text="Show All" FontSize="14" TextColor="#E94F37" BackgroundColor="Transparent" Clicked="OnShowAllNewArrivals"/>
                    </Grid>
                    <CollectionView x:Name="NewArrivalsCollection" ItemsSource="{Binding NewArrivalProducts}" HeightRequest="220" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" CornerRadius="18" Margin="10,10,0,10" Padding="0" WidthRequest="140" HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnProductTapped"/>
                                    </Frame.GestureRecognizers>
                                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="110" WidthRequest="140" Margin="0,0,0,10"/>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold" LineBreakMode="TailTruncation" Margin="8,2,8,0"/>
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="#7B7B7B" Margin="8,0,8,0" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Price, StringFormat='$ {0:F2}'}" FontSize="14" TextColor="#2D1E2F" FontAttributes="Bold" Margin="8,2,8,8"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" Padding="0" HeightRequest="70" BackgroundColor="#FDF6ED">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="🏠" FontSize="18" BackgroundColor="Transparent" TextColor="#E94F37" Clicked="OnHomeClicked"/>
            <Button Grid.Column="1" Text="🛍️" FontSize="18" BackgroundColor="Transparent" TextColor="#7B7B7B" Clicked="OnStoreClicked"/>
            <Button Grid.Column="2" Text="❤️" FontSize="18" BackgroundColor="Transparent" TextColor="#7B7B7B" Clicked="OnFavoriteClicked"/>
            <Button Grid.Column="3" Text="🛒" FontSize="18" BackgroundColor="Transparent" TextColor="#7B7B7B" Clicked="OnCartClicked"/>
            <Button Grid.Column="4" Text="👤" FontSize="18" BackgroundColor="Transparent" TextColor="#7B7B7B" Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>
</ContentPage>
