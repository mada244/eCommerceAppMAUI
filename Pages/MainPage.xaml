<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.MainPage"
             BackgroundColor="#d2c4ad">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Logo sus -->
        <Image Source="logo.png"
               HeightRequest="80"
               WidthRequest="80"
               HorizontalOptions="Center"
               Margin="0,24,0,0"
               Grid.Row="0"/>
        <!-- Banner Promo -->
        <Frame Grid.Row="0" HeightRequest="240" Padding="0" Margin="0,80,0,0" CornerRadius="0" HasShadow="False" BackgroundColor="#d2c4ad">
            <Image Source="feature1.png"
                   Aspect="AspectFill"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   HeightRequest="240"
                   WidthRequest="{OnPlatform Default=400, iOS=400, Android=400}"/>
        </Frame>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="0,10,0,0">
            <VerticalStackLayout Spacing="30" Padding="0,0,0,20">
                <!-- Summer Sale Section -->
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="SUMMER SALE" FontSize="20" FontAttributes="Bold" TextColor="#2d2233" VerticalOptions="Center"/>
                        <Button Text="Show All" FontSize="16" TextColor="White" BackgroundColor="Black" CornerRadius="18" Padding="18,0" HeightRequest="40" WidthRequest="110" Clicked="OnShowAllSummerSale" HorizontalOptions="End"/>
                    </Grid>
                    <CollectionView x:Name="SummerSaleCollection" ItemsSource="{Binding SummerSaleProducts}" HeightRequest="220" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" CornerRadius="18" Margin="10,10,0,10" Padding="0" WidthRequest="140" HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnProductTapped"/>
                                    </Frame.GestureRecognizers>
                                    <VerticalStackLayout>
                                        <Grid>
                                            <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="110" WidthRequest="140" Margin="0,0,0,10"/>
                                        </Grid>
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#2d2233" LineBreakMode="TailTruncation" Margin="8,2,8,0"/>
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="#7B7B7B" Margin="8,0,8,0" LineBreakMode="TailTruncation"/>
                                        <Grid ColumnDefinitions="Auto,Auto" Margin="8,2,8,8">
                                            <Label Text="{Binding Price, StringFormat='$ {0:F2}'}" FontSize="14" TextColor="#2d2233" FontAttributes="Bold" Margin="10,0,0,0"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- New Arrivals Section -->
                <StackLayout>
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="NEW ARRIVALS" FontSize="20" FontAttributes="Bold" TextColor="#2d2233" VerticalOptions="Center"/>
                        <Button Text="Show All" FontSize="16" TextColor="White" BackgroundColor="Black" CornerRadius="18" Padding="18,0" HeightRequest="40" WidthRequest="110" Clicked="OnShowAllNewArrivals" HorizontalOptions="End"/>
                    </Grid>
                    <CollectionView x:Name="NewArrivalsCollection" ItemsSource="{Binding NewArrivalProducts}" HeightRequest="220" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" CornerRadius="18" Margin="10,10,0,10" Padding="0" WidthRequest="140" HasShadow="True">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnProductTapped"/>
                                    </Frame.GestureRecognizers>
                                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="110" WidthRequest="140" Margin="0,0,0,10"/>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#2d2233" LineBreakMode="TailTruncation" Margin="8,2,8,0"/>
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="#7B7B7B" Margin="8,0,8,0" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Price, StringFormat='$ {0:F2}'}" FontSize="14" TextColor="#2d2233" FontAttributes="Bold" Margin="8,2,8,8"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" Padding="0" HeightRequest="70" BackgroundColor="#f3f1ee">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="🏠" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnHomeClicked"/>
            <Button Grid.Column="1" Text="🛍️" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnStoreClicked"/>
            <Button Grid.Column="2" Text="❤️" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnFavoriteClicked"/>
            <Button Grid.Column="3" Text="🛒" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnCartClicked"/>
            <Button Grid.Column="4" Text="👤" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>
</ContentPage>
