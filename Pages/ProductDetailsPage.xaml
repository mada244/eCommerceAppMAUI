<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.ProductDetailsPage">
    <ScrollView>
        <StackLayout Padding="20">
            <!-- Imagine produs -->
            <Image Source="{Binding SelectedImage}" HeightRequest="200" Aspect="AspectFit" />

            <!-- Nume produs -->
            <Label Text="{Binding Name}" FontSize="24" FontAttributes="Bold" Margin="0,10,0,0" />

            <!-- Descriere produs -->
            <Label Text="{Binding Description}" FontSize="16" TextColor="Gray" Margin="0,5,0,10" />

            <!-- Preț și discount -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="{Binding Price, StringFormat='Price: {0:C}'}" FontSize="18" TextColor="Green" />
                <Label Text="{Binding OldPrice, StringFormat='Was: {0:C}'}" FontSize="16" TextColor="Gray" TextDecorations="Strikethrough" />
            </StackLayout>

            <!-- Culori disponibile -->
            <Label Text="Colors:" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5" />
            <CollectionView ItemsSource="{Binding Colors}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BackgroundColor="LightGray" CornerRadius="5" Margin="5">
                            <Label Text="{Binding .}" HorizontalOptions="Center" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Mărimi disponibile -->
            <Label Text="Sizes:" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5" />
            <CollectionView ItemsSource="{Binding Sizes}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BackgroundColor="LightGray" CornerRadius="5" Margin="5">
                            <Label Text="{Binding .}" HorizontalOptions="Center" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Butoane pentru cantitate -->
            <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                <Button Text="-" Clicked="OnDecreaseQuantityClicked" />
                <Label Text="{Binding Quantity}" FontSize="18" VerticalOptions="Center" />
                <Button Text="+" Clicked="OnIncreaseQuantityClicked" />
            </StackLayout>

            <!-- Butoane acțiuni -->
            <Button Text="Add to Cart" BackgroundColor="#E91E63" TextColor="White" Clicked="OnAddToCartClicked" Margin="0,20,0,0" />
            <Button Text="Favorite" Clicked="OnFavoriteTapped" Margin="0,10,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>
