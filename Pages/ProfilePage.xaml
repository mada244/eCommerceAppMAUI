<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.ProfilePage"
             BackgroundColor="#d2c4ad">
    <Grid RowDefinitions="Auto,*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,32,0,0">
            <Label Text="My Profile"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2d2233"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Column="0"/>
            <ImageButton Source="share.png" Grid.Column="1" BackgroundColor="Transparent" HeightRequest="32" WidthRequest="32" Margin="0,0,20,0" VerticalOptions="Center" HorizontalOptions="End"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24" Padding="0,0,0,0">
                <Frame BackgroundColor="White" CornerRadius="24" Padding="24" HasShadow="True" Margin="24,0,24,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding UserName}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#2d2233" 
                                   HorizontalOptions="Start"/>
                            <Label Text="{Binding UserEmail}" 
                                   FontSize="16" 
                                   TextColor="#7B7B7B" 
                                   HorizontalOptions="Start"/>
                        </VerticalStackLayout>
                        <ImageButton Source="edit.png" 
                                     Grid.Column="1" 
                                     BackgroundColor="Transparent" 
                                     HeightRequest="28" 
                                     WidthRequest="28" 
                                     VerticalOptions="Start" 
                                     HorizontalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="24,0,24,0">
                    <Grid RowDefinitions="Auto,Auto" Padding="0,0,0,0">
                        <Grid ColumnDefinitions="*,Auto" Padding="20,16,20,0">
                            <Label Text="MY SHIPPING ADDRESS" FontSize="18" TextColor="#2d2233" FontAttributes="Bold"/>
                            <ImageButton Source="plus.png" Grid.Column="1" BackgroundColor="Transparent" HeightRequest="24" WidthRequest="24"/>
                        </Grid>
                        <Frame Grid.Row="1" BackgroundColor="#f3f1ee" CornerRadius="14" Padding="0" Margin="20,12,20,20" HeightRequest="80" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="False">
                            <Image Source="box.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="24,0,24,0">
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="MY ORDERS" FontSize="18" TextColor="#2d2233" FontAttributes="Bold"/>
                        <Image Source="arrow_right.png" Grid.Column="1" HeightRequest="24" WidthRequest="24" VerticalOptions="Center" HorizontalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="24,0,24,0">
                    <Grid ColumnDefinitions="*,Auto" Padding="20,0,20,0">
                        <Label Text="APP SETTINGS" FontSize="18" TextColor="#2d2233" FontAttributes="Bold"/>
                        <Image Source="arrow_right.png" Grid.Column="1" HeightRequest="24" WidthRequest="24" VerticalOptions="Center" HorizontalOptions="End"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="2" Padding="0" HeightRequest="70" BackgroundColor="#f3f1ee">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="🏠" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnHomeClicked"/>
            <Button Grid.Column="1" Text="🛍️" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnStoreClicked"/>
            <Button Grid.Column="2" Text="❤️" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnFavoriteClicked"/>
            <Button Grid.Column="3" Text="🛒" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnCartClicked"/>
            <Button Grid.Column="4" Text="👤" FontSize="18" BackgroundColor="Transparent" TextColor="#2d2233" Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>
</ContentPage>
