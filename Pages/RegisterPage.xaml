<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.RegisterPage"
             BackgroundColor="#d2c4ad">
    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,0" Spacing="20">
            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="250"
                   WidthRequest="250"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>

            <!-- First Name Entry -->
            <Entry x:Name="FirstNameEntry"
                   Placeholder="First name"
                   BackgroundColor="White"
                   HeightRequest="50"
                   FontSize="18"
                   />

            <!-- Last Name Entry -->
            <Entry x:Name="LastNameEntry"
                   Placeholder="Last name"
                   BackgroundColor="White"
                   HeightRequest="50"
                   FontSize="18"
                   />

            <!-- Email Entry -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   BackgroundColor="White"
                   HeightRequest="50"
                   FontSize="18"
                   />

            <!-- Password Entry with Eye Icon -->
            <Grid>
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       BackgroundColor="White"
                       HeightRequest="50"
                       FontSize="18"
                       />
                <ImageButton Source="eye.png"
                             BackgroundColor="Transparent"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Clicked="OnTogglePasswordVisibility"/>
            </Grid>

            <!-- Sign Up Button -->
            <Button Text="Sign Up"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontSize="22"
                    CornerRadius="30"
                    HeightRequest="60"
                    Clicked="OnRegisterClicked"
                    />

            <!-- Sign In Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30,0,0">
                <Label Text="Already have an account ?"
                       TextColor="#2d2233"
                       FontSize="20"/>
                <Label Text=" Sign In"
                       x:Name="SignInLabel"
                       TextColor="#2d2233"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextDecorations="Underline"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 