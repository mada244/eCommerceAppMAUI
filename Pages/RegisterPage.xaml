<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.RegisterPage"
             BackgroundColor="#d2c4ad">
    <ScrollView>
        <VerticalStackLayout Padding="30,0,30,0" Spacing="24" VerticalOptions="CenterAndExpand" HeightRequest="700">
            <Image Source="logo.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="👤" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="FirstNameEntry"
                           Placeholder="First name"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="240"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="👤" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="LastNameEntry"
                           Placeholder="Last name"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="240"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="📧" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="240"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="🔒" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="160"/>
                    <Button x:Name="ShowHideButton" Text="Show" BackgroundColor="Transparent" TextColor="Black" FontSize="16" WidthRequest="80" HeightRequest="36" Padding="8,0" HorizontalOptions="End" VerticalOptions="Center" Clicked="OnTogglePasswordVisibility"/>
                </HorizontalStackLayout>
            </Frame>
            <Button Text="Sign Up"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontSize="22"
                    CornerRadius="30"
                    HeightRequest="60"
                    Clicked="OnRegisterClicked"
                    WidthRequest="320"
                    HorizontalOptions="Center"/>
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,24,0,0">
                <Label Text="Already have an account ?"
                       TextColor="#2d2233"
                       FontSize="20"/>
                <Label Text=" Sign In"
                       x:Name="SignInLabel"
                       TextColor="#2d2233"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextDecorations="Underline"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 