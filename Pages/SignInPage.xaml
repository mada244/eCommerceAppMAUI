<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.SignInPage"
             BackgroundColor="#d2c4ad">
    <ScrollView>
        <VerticalStackLayout Padding="30,0,30,0" Spacing="24" VerticalOptions="CenterAndExpand" HeightRequest="600">    
            <Image Source="logo.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="📧" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="240"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="18" Padding="0" HasShadow="True" Margin="0,0,0,0" HorizontalOptions="Center" WidthRequest="320">
                <HorizontalStackLayout Spacing="0" Padding="18,0">
                    <Label Text="🔒" VerticalOptions="Center" FontSize="20"/>
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           FontSize="18"
                           Margin="12,0,0,0"
                           WidthRequest="160"/>
                    <Button x:Name="ShowHideButton" Text="Show" BackgroundColor="Transparent" TextColor="Black" FontSize="16" WidthRequest="80" HeightRequest="36" Padding="8,0" HorizontalOptions="End" VerticalOptions="Center" Clicked="OnTogglePasswordVisibility"/>
                </HorizontalStackLayout>
            </Frame>
            <Button Text="Sign In"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontSize="22"
                    CornerRadius="30"
                    HeightRequest="60"
                    Clicked="OnSignInClicked"
                    WidthRequest="320"
                    HorizontalOptions="Center"
                    />
            <Button Text="Forgot password ?"
                    x:Name="ForgotPasswordButton"
                    BackgroundColor="#b3a692"
                    TextColor="#e7ddc9"
                    FontSize="20"
                    CornerRadius="10"
                    Clicked="OnForgotPasswordClicked"
                    WidthRequest="320"
                    HorizontalOptions="Center"/>
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,24,0,0">
                <Label Text="Don't have an account ?"
                       TextColor="#2d2233"
                       FontSize="20"/>
                <Label Text=" Sign Up"
                       x:Name="SignUpLabel"
                       TextColor="#2d2233"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 