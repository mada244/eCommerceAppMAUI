<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.StorePage"
             BackgroundColor="White">
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Titlu -->
        <Label Text="Store"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <!-- ConÈ›inut principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="18" Padding="0,0,0,0">
                <!-- Search Bar -->
                <SearchBar Placeholder="Search"
                           Margin="16,0,16,10"
                           BackgroundColor="#f2f2f2"
                           HeightRequest="44"
                           x:Name="SearchBar"
                           TextChanged="OnSearchTextChanged"/>

                <!-- Lista de produse -->
                <CollectionView x:Name="ProductsCollection" ItemsSource="{Binding Products}" Margin="16,0,16,0">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnProductTapped"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout>
                                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="150"/>
                                    <VerticalStackLayout Padding="10">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Price, StringFormat='$ {0:F2}'}" FontSize="18" TextColor="#7a0026" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        
                                        <!-- Butoane pentru Add to Cart È™i Favorite -->
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Button Grid.Column="0" 
                                                    Text="Add to Cart" 
                                                    BackgroundColor="#7a0026" 
                                                    TextColor="White" 
                                                    CornerRadius="20" 
                                                    HeightRequest="36" 
                                                    Margin="0,0,5,0"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="OnAddToCartClicked"/>
                                            
                                            <Button Grid.Column="1" 
                                                    Text="â¤" 
                                                    BackgroundColor="Transparent" 
                                                    TextColor="#7a0026" 
                                                    FontSize="20" 
                                                    WidthRequest="40" 
                                                    HeightRequest="36"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="OnFavoriteClicked"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bara de navigare jos -->
        <Grid Grid.Row="2" Padding="0" HeightRequest="70" BackgroundColor="#f6eddb">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="ðŸ " FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnHomeClicked"/>
            <Button Grid.Column="1" Text="ðŸ›ï¸" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnStoreClicked"/>
            <Button Grid.Column="2" Text="â¤ï¸" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnFavoriteClicked"/>
            <Button Grid.Column="3" Text="ðŸ›’" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnCartClicked"/>
            <Button Grid.Column="4" Text="ðŸ‘¤" FontSize="18" BackgroundColor="Transparent" TextColor="#7a0026" Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>
</ContentPage> 